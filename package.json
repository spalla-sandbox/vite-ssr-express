{
  "name": "ssr-express",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines" : { 
    "node" : ">=18.2.0"
  },
  "scripts": {
    "dev": "node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir output/client",
    "build:server": "vite build --ssr src/main.ts --outDir output/server",
    "preview": "cross-env NODE_ENV=production node server",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@picocss/pico": "^1.5.10",
    "compression": "^1.7.4",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "radix3": "^1.0.1",
    "ufo": "^1.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "cross-env": "^7.0.3",
    "globby": "^13.2.2",
    "puppeteer": "^20.8.3",
    "supertest": "^6.3.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.33.0"
  }
}
